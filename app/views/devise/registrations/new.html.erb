            <%# <%= f.label "教員 =>" %>
            <%# <%= f.check_box :position,  id: "check0" %>
            <%# <%= f.label "教育関係者 =>" %>
            <%# <%= f.check_box :position, id: "check0" %>
            <%# <%= f.label "保護者 =>" %> 
            <%# <%= f.check_box :position, id: "check0" %> 
            <%# <%= f.label "それ以外 =>" %> 
            <%# <%= f.check_box :position, id: "check0" %> 
        <%# </div> %>
      <%# </div> %>

      <div class="field">
        プロフィール(任意)<br />
        <%= f.text_area :profile, placeholder:"" ,rows:"7" ,maxlength:"1000" %>
      </div>

      <div class="actions">
        <%= f.submit "登録する" %>
      </div>
    <% end %>
  </div>
</div>
