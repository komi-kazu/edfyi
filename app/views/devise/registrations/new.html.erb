<div class="registrations-wrapper">
<div class="signup-wrapper">
    <h2>新規ユーザー登録</h2>

  <%= render 'shared/error_messages', model: f.object %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :nickname, "ニックネーム(必須)"%><br />
        <%= f.text_area :nickname, autofocus: true, autocomplete: "nickname" %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス(必須)"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード(必須)"%><br />
        <% if @minimum_password_length %>
        <em>(※ <%= @minimum_password_length %> 文字以上英数混合でお願いします)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "確認用パスワード(必須)"%><br />
        <em>(※ 上記のパスワードと同じものを間違えずに入力してください)</em><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <%# <div class="field"> %>
        <%# 自分の立場を選んでください(任意)<br /> %>
