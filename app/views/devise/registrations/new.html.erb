<div class="registrations-warapper">
  <h2>新規ユーザー登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :nickname, "ニックネーム(必須)"%><br />
      <%= f.text_area :nickname, autofocus: true, autocomplete: "nickname" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス(必須)"%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード(必須)"%><br />
      <% if @minimum_password_length %>
      <em>(※ <%= @minimum_password_length %> 文字以上英数混合でお願いします)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード(必須)"%><br />
      <em>(※ 上記のパスワードと同じものを間違えずに入力してください)</em><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      自分の立場を選んでください(任意)<br />
      <div class="position-selection">
        <% %w(教員 教育関係者 保護者 その他).each.with_index do |position,i| %>
          <label>
            <%= f.check_box :position, {multiple: true}, position, nil %>
            <%= position %>
          </label>
        <% end %>
      </div>
    </div>

    <div class="field">
      プロフィール(任意)<br />
      <%= f.text_area :profile, placeholder:"" ,rows:"7" ,maxlength:"1000" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
