      <% end %>

      <% if @article.article11.present? %>
      <%= @article.article11 %><br />
      <% end %>
    </div>
  </div>
    <div class="article-operation">
      <% if user_signed_in? %>
        <% if current_user.id == @article.user_id %>
              <%= link_to "記事の編集", edit_article_path(@article.id), method: :get, class: "item-red-btn" %>
              <%= link_to "記事の削除", article_path(@article.id), method: :delete, class:"item-destroy" %>
        <% end %>
      <% end %>
    </div>
    <div class="comments-container">
      <% if user_signed_in? %>
        <%= form_with(model: [@article,@comment], local: true) do |form| %>
          <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
          <%= form.submit "SEND" %>
        <% end %>
      <% else %>
        <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
      <% end %>
      <div class="comments">
        <h4>＜コメント一覧＞</h4>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      </div>
    </div>
</div>