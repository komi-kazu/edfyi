<div class="detail-main">
  <div class="article-wrapper">
    <div class="article-haeder">
      <p>
      <%= link_to "名前", "#" %>さんが
      <%= @article.created_at.strftime '%Y年%-m月%-d日' %>に投稿
      <div class="card-tag">
        <% @article.tag_list.each do |tag| %>
          <%= link_to "##{tag}", articles_path(tag_name: tag) %>
        <% end %>
      </div>
      </p>
      <tr id="article_<%= @article.id %>">
        <%= render partial: 'like', article: @article %>
      </tr>
      <h2><%= @article.title %></h2>
    </div>
    <div class="article-main">
      <%= @article.article1 %><br />
      <% if @article.image1.present? %>
      <%= image_tag attachment_url(@article, :image1, :fill, 300, 300, format: "jpg") %><br />
      <% end %>

